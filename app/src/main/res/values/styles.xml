<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- CardView -->
    <style name="CustomCardView" parent="CardView">
        <item name="cardCornerRadius">@dimen/corner_radius_8dp</item>
        <item name="cardElevation">@dimen/elevation</item>
    </style>

    <style name="CustomCardViewLightRed" parent="CustomCardView">
        <item name="cardBackgroundColor">@color/light_red</item>
    </style>

    <style name="CustomCardViewClickable" parent="CustomCardView">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- TextView -->
    <style name="TextViewCharactersList" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginStart">@dimen/margin_15dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_15dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_4dp</item>
    </style>

    <style name="TextViewItemsList" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:layout_marginStart">@dimen/margin_10dp</item>
    </style>

    <style name="TextViewItemsXXXList" parent="TextViewItemsList">
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextViewItemsXXXType" parent="TextViewItemsList">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">@dimen/margin_5dp</item>
    </style>

    <style name="TextViewCharacterTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/light_red</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TextViewCharacterSubtitle" parent="TextViewCharacterTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">@dimen/margin_10dp</item>
    </style>

    <style name="TextViewCharacterDescription" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>