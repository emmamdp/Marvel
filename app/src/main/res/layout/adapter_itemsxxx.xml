<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_5dp">

    <ImageView
        android:id="@+id/iv_storie"
        android:layout_width="@dimen/width_20dp"
        android:layout_height="@dimen/height_20dp"
        android:layout_marginStart="@dimen/margin_10dp"
        android:contentDescription="@null"
        android:src="@drawable/bubble"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item"
        style="@style/TextViewItemsXXXList"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/iv_storie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_storie"
        app:layout_constraintTop_toTopOf="@+id/iv_storie"
        tools:text="Hulk (2008) #55" />

    <TextView
        android:id="@+id/tv_item_type"
        style="@style/TextViewItemsXXXType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/tv_item"
        app:layout_constraintTop_toBottomOf="@+id/tv_item"
        tools:text="- Cover" />

</androidx.constraintlayout.widget.ConstraintLayout>