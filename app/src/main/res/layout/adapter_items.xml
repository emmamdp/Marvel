<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_5dp">

    <ImageView
        android:id="@+id/iv_bubble"
        android:layout_width="@dimen/width_20dp"
        android:layout_height="@dimen/height_20dp"
        android:layout_marginStart="@dimen/margin_10dp"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/comic" />

    <TextView
        android:id="@+id/tv_item"
        style="@style/TextViewItemsList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/iv_bubble"
        app:layout_constraintStart_toEndOf="@+id/iv_bubble"
        app:layout_constraintTop_toTopOf="@+id/iv_bubble"
        tools:text="Avengers" />

</androidx.constraintlayout.widget.ConstraintLayout>